BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: number_received
            on_text: app.calculate_km_from_miles()
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
                font_size: 48
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                font_size: 48
    Button:
        text: 'Convert m to km'
        on_press: app.calculate_km_from_miles()
        font_size: 48
    Label:
        text: app.km_from_miles
